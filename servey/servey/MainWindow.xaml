<Window x:Class="servey.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:servey"
        mc:Ignorable="d"
        Title="Contact Information" Height="350" Width="500">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.OpacityMask>
            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                <GradientStop Color="Black" Offset="0"/>
                <GradientStop Color="White" Offset="1"/>
            </LinearGradientBrush>
        </Grid.OpacityMask>
        <Grid.Background>
            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                <GradientStop Color="#FFB9B9B9" Offset="1"/>
                <GradientStop Color="White"/>
            </LinearGradientBrush>
        </Grid.Background>
        <Image HorizontalAlignment="Left" Height="219" Margin="102,10,0,0" VerticalAlignment="Top" Width="287" Source="images/splash.png" Grid.ColumnSpan="2"/>

        <Label Content="For Admin Please Choose One Of the List" Margin="0,240,136,0" VerticalAlignment="Top" HorizontalAlignment="Right" Grid.ColumnSpan="2"/>
        <ComboBox HorizontalAlignment="Left" Margin="1,268,0,0" VerticalAlignment="Top" Width="129" RenderTransformOrigin="0.5,0.5" SelectionChanged="ComboBox_SelectionChanged" Height="28" Grid.Column="1">
            <ComboBox.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform/>
                    <RotateTransform Angle="-0.115"/>
                    <TranslateTransform/>
                </TransformGroup>
            </ComboBox.RenderTransform>
            <ComboBoxItem Content="Login" HorizontalAlignment="Left" Width="129" Selected="ComboBoxItem_Selected"/>
            <ComboBoxItem Content="Add New Survey" HorizontalAlignment="Left" Width="129"/>
            <ComboBoxItem Content="View Result" HorizontalAlignment="Left" Width="125"/>
        </ComboBox>
        <Button Content="Start Survey" HorizontalAlignment="Left" Margin="196,161,0,0" VerticalAlignment="Top" Width="100" Height="29" Grid.ColumnSpan="2" Click="Button_Click_1">
            <Button.Background>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="#FFA6A6A6" Offset="1"/>
                    <GradientStop Color="White"/>
                </LinearGradientBrush>
            </Button.Background>
        </Button>
        <Button Content="Next" HorizontalAlignment="Left" Margin="117,271,0,0" VerticalAlignment="Top" Width="119" Height="24">
            <Button.Background>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="#FFA6A6A6" Offset="1"/>
                    <GradientStop Color="White"/>
                </LinearGradientBrush>
            </Button.Background>
        </Button>

    </Grid>
</Window>
